{
  "description": "interkasten plugin hooks â€” Notion sync bridge",
  "hooks": {
    "Setup": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/setup.sh\"",
            "timeout": 30
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "SessionStart",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/session-status.sh\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Stop",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/session-end-warn.sh\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
